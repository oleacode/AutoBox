{% extends '../../layout_base.html.twig' %}
{% block title %}{{ vehicle.number_plate }}{% endblock %}
{% block head %}
    <link rel="stylesheet" href="/css/tables.css">
{% endblock %}
{% block body %}
    <div class="table-responsive">
        <div class="my-2 my-md-0 flex-grow-1 flex-md-grow-0 order-first order-md-last">
            <form action="." method="get">
                <div class="input-icon">
                        <span class="input-icon-addon">
                          <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><circle cx="10" cy="10" r="7"></circle><line x1="21" y1="21" x2="15" y2="15"></line></svg>
                        </span>
                    <input type="text" class="form-control" placeholder="Search…" aria-label="Search in website">
                </div>
            </form>
        </div>
    </div>
        <table class="table card-table table-vcenter text-nowrap datatable">
            <thead>
                <tr>
                    <th>Nombre y apellidos</th>
                    <th>Dni</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th>Vehículos</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ client.name }} {{ client.surname }}</td>
                    <td>{{ client.dni_nif }}</td>
                    <td>{{ client.email }}</td>
                    <td>{{ client.phone_number1 }}</td>
                    <td>{{ client.phone_number2 }}</td>
                    <td>{{ client.address }}</td>
                    <td>
                        {% for vehicle in client.vehicles %}
                            {{ vehicle.number_plate }} {{ vehicle.model }}
                        {% endfor %}
                    </td>
                    <td><a href="/client/edit/{{ client.dni_nif }}">Editar</a></td>
                    <td><a href="/client/delete/{{ client.dni_nif }}">Eliminar</a></td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}